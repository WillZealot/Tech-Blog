<main class="container py-4">
    <div class="card mb-4">
      <div class="card-header">
        <h5>{{post.title}}: Created: {{post.date_created}}</h5>
      </div>
      <div class="card-body">
        <p class="card-text">{{post.content}}</p>
        <footer class="blockquote-footer">By: {{post.user.name}}</footer>
      </div>
    </div>

    <form class="comment-form mb-4" method="POST">
  <div class="form-group">
    <label for="comment-body">Add a comment:</label>
    <textarea class="form-control" name="content" id="comment-body" rows="3" required></textarea>
  </div>
  <br>
  <button type="submit" class="btn btn-primary">Add Comment</button>
</form>

    {{#each post.comments as | comment |}}
  <div class="card mb-3">
    <div class="card-header">
      Comment by: {{comment.user.name}}
    </div>
    <div class="card-body">
      <p class="card-text">{{comment.comment_content}}</p>
    </div>
  </div>
  {{/each}}


{{#if loggedIn}}
<script src="/comment.js"></script>
{{/if}}