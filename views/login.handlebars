<form class="login-form"action="login" method="post">
  <div class="form-group">
    <label for="email-login">Email address</label>
    <input id="email-login" name="email" type="email" class="form-control" aria-describedby="emailHelp" placeholder="Enter email">
    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>
  <div class="form-group">
    <label for="password-login">Password</label>
    <input type="password" class="form-control" id="password-login" name="password" placeholder="Password">
  </div>
  <button type="submit" id="login" class="btn btn-primary">Submit</button>
</form>
<a id="signup" href="signup">Sign Up Instead</a>

<script src="../public/login.js"></script>